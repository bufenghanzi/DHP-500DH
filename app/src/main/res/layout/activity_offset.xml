                        android:background="@drawable/task_edittext_bg"
                        android:gravity="right|center"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:paddingLeft="18px"
                        android:paddingRight="18px"
                        android:singleLine="true"
                        android:text="0"
                        android:textSize="@dimen/activity_title_textsize_sub"
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_offset_z"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/activity_z"
                        android:textSize="@dimen/activity_title_textsize_sub"/>

                    <EditText
                        android:id="@+id/et_offset_z"
                        android:layout_width="230px"
                        android:layout_height="90px"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="18px"
                        android:layout_toRightOf="@id/tv_offset_z"
                        android:background="@drawable/task_edittext_bg"
                        android:gravity="right|center"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal|numberSigned"
                        android:paddingLeft="18px"
                        android:paddingRight="18px"
                        android:singleLine="true"
                        android:text="0"
                        android:textSize="@dimen/activity_title_textsize_sub"/>

                    <EditText
                        android:id="@+id/et_abs_offset_z"
                        android:layout_width="230px"
                        android:layout_height="90px"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="18px"
                        android:layout_toRightOf="@id/tv_offset_z"
                        android:background="@drawable/task_edittext_bg"
                        android:gravity="right|center"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:paddingLeft="18px"
                        android:paddingRight="18px"
                        android:singleLine="true"
                        android:text="0"
                        android:textSize="@dimen/activity_title_textsize_sub"
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
