<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/activity_task_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1050px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        android:background="@drawable/task_bottom_linearlayout_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="540px"
            android:layout_height="700px"
            android:layout_gravity="center"
            android:layout_marginLeft="18px"
            android:layout_marginTop="58px"
            android:background="@drawable/task_linearlayout_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_absolute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25px"
                    android:layout_marginTop="25px"
                    android:gravity="center"
                    android:text="@string/relative"
                    android:textColor="#2AAAE8"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_pianyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25px"
                    android:layout_marginTop="25px"
                    android:layout_toRightOf="@id/tv_absolute"
                    android:gravity="center"
                    android:text="@string/activity_glue_pianyi"
                    android:textColor="#2AAAE8"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/activity_task_listview_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_offset_x"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/activity_x"
                        android:textSize="@dimen/activity_title_textsize_sub"/>

                    <EditText
                        android:id="@+id/et_offset_x"
                        android:layout_width="230px"
                        android:layout_height="90px"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="18px"
                        android:layout_toRightOf="@id/tv_offset_x"
                        android:background="@drawable/task_edittext_bg"
                        android:gravity="right|center"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal|numberSigned"
                        android:paddingLeft="18px"
                        android:paddingRight="18px"
                        android:singleLine="true"
                        android:text="0"
                        android:textSize="@dimen/activity_title_textsize_sub"/>

                    <EditText
                        android:id="@+id/et_abs_offset_x"
                        android:layout_width="230px"
                        android:layout_height="90px"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="18px"
                        android:layout_toRightOf="@id/tv_offset_x"
                        android:background="@drawable/task_edittext_bg"
                        android:gravity="right|center"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:paddingLeft="18px"
                        android:paddingRight="18px"
                        android:singleLine="true"
                        android:text="0"
                        android:textSize="@dimen/activity_title_textsize_sub"
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_offset_y"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/activity_y"
                        android:textSize="@dimen/activity_title_textsize_sub"/>

                    <EditText
                        android:id="@+id/et_offset_y"
                        android:layout_width="230px"
                        android:layout_height="90px"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="18px"
                        android:layout_toRightOf="@id/tv_offset_y"
                        android:background="@drawable/task_edittext_bg"
                        android:gravity="right|center"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal|numberSigned"
                        android:paddingLeft="18px"
                        android:paddingRight="18px"
