<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_listview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_table_header"
    android:orientation="horizontal" >

    <TextView
         android:id="@+id/tv_num"
        android:layout_width="0dp"
        android:layout_height="50px"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/number"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
        android:textStyle="bold" 
         />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <TextView
        android:id="@+id/tv_fangan"
        android:layout_width="0dp"
        android:layout_height="40px"
        android:layout_weight="1"
        android:gravity="center"
        android:text="方案"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
        android:textStyle="bold" 
       />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="0dp"
        android:layout_height="40px"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/type"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <TextView
        android:id="@+id/tv_x"
        android:layout_width="0dp"
        android:layout_height="40px"
        android:layout_weight="2"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <TextView
        android:id="@+id/tv_y"
        android:layout_width="0dp"
        android:layout_height="40px"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Y"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <TextView
        android:id="@+id/tv_z"
        android:layout_width="0dp"
        android:layout_height="40px"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Z"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <TextView
        android:id="@+id/tv_u"
        android:layout_width="0dp"
        android:layout_height="40px"
        android:layout_weight="2"
        android:gravity="center"
        android:text="U"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="0dp"
        android:layout_height="40px"
        android:layout_marginLeft="20px"
        android:layout_weight="1"
        android:focusable="false"
        android:gravity="center"
        android:visibility="gone" />

    <RadioButton
        android:id="@+id/rb1"
        android:layout_width="0dp"
        android:layout_height="60px"
        android:layout_marginLeft="20px"
        android:layout_weight="1"
        android:focusable="false"
        android:gravity="center"
        android:visibility="invisible" />

</LinearLayout>