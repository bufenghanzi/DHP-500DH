<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_listview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
          android:id="@+id/tv_num"
        android:layout_width="0dp"
        android:layout_height="93px"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/number"
        android:textColor="@color/activity_task_listview_text_color"
       />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <TextView
        android:id="@+id/tv_fangan"
         android:layout_width="0dp"
        android:layout_height="93px"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""/>

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="0dp"
        android:layout_height="93px"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/type"
        android:clickable="true"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
         />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <EditText
        android:id="@+id/edit_x"
        android:layout_width="0dp"
        android:layout_height="93px"
        android:layout_weight="2"
        android:background="@null"
        android:gravity="center"
        android:hint="0"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
        />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <EditText
        android:id="@+id/edit_y"
        android:layout_width="0dp"
        android:layout_height="93px"
        android:layout_weight="2"
        android:background="@null"
        android:gravity="center"
        android:hint="0"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
         />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <EditText
        android:id="@+id/edit_z"
        android:layout_width="0dp"
        android:layout_height="93px"
        android:layout_weight="2"
        android:background="@null"
        android:gravity="center"
        android:hint="0"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
         />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <EditText
        android:id="@+id/edit_u"
        android:layout_width="0dp"
        android:layout_height="93px"
        android:layout_weight="2"
        android:background="@null"
        android:gravity="center"
        android:hint="0"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textColor="@color/activity_task_listview_text_color"
        android:textSize="@dimen/activity_task_listview_text_size"
         />

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/activity_task_listview_divider" />

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="0dp"
        android:layout_height="60px"
        android:layout_marginLeft="20px"
        android:layout_weight="1"
        android:focusable="false"
        android:gravity="center"
        android:visibility="gone" />

    <RadioButton
        android:id="@+id/rb1"
        android:layout_width="0dp"
        android:layout_height="60px"
        android:layout_marginLeft="20px"
        android:layout_weight="1"
        android:focusable="false"
        android:gravity="center"
        android:visibility="invisible" />

</LinearLayout>