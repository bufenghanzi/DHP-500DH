<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <TextView
                android:id="@+id/tv_goTimePrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="@string/activity_glue_goTimePrev"
                 />

            <EditText
                android:id="@+id/et_output_goTimePrev"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_goTimePrev"
                android:background="@drawable/task_edittext_bg"
                android:gravity="right|center"
                android:textColor="#000000"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/activity_glue_edittext_textsize" />

            <TextView
                android:id="@+id/extend_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/et_output_goTimePrev"
                android:text="@string/activity_ms"
                />

            <TextView
                android:id="@+id/tv_goTimeNext_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:text="@string/activity_ms"
                 />

            <EditText
                android:id="@+id/et_output_goTimeNext"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/tv_goTimeNext_ms"
                android:background="@drawable/task_edittext_bg"
                android:gravity="right|center"
                android:textColor="#000000"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/activity_glue_edittext_textsize" />

            <TextView
                android:id="@+id/tv_goTimeNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:layout_toLeftOf="@id/et_output_goTimeNext"
                android:text="@string/activity_glue_goTimeNext"
                />
        </RelativeLayout>

